<p style="color: green"><%= notice %></p>

<h1 class="text-center" >Mantenciones</h1>

<table class="table bg-danger">
  <thead>
    <tr>
      <th>Tipo de motor</th>
      <th>Tipo de mantenimiento</th>
      <th>Nombre del motor</th>
      <th>Foto</th>
      <th>Menu</th>
    </tr>
  </thead>
  <tbody>
    <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= maintenance.engine.type_engine %></td>
        <td><%= maintenance.type_maintenance.name %></td>
        <td><%= maintenance.name_engine %></td>
        <td><%= image_tag maintenance.engine.photo, class: "img-thumbnail",width: 100, height: 100 %></td> 
        <td>
          <%= link_to "Editar", edit_maintenance_path(maintenance), class:"btn btn-warning" %>
          <%= link_to "Ver", maintenance_path(maintenance), class:"btn btn-success" %>
          <%= link_to "Eliminar", maintenance, method: :delete, data: { confirm: "¿Estás seguro?" }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= raw pagy_nav(@pagy) %>
<br>
<%= link_to "Nueva Mantención", new_maintenance_path, class: "btn btn-primary" %>
